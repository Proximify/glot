{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Font parameter",
    "description": "Font parameter. It generate a dropdown menu with website and widget fonts as options.",
    "type": "object",
    "properties": {
        "type": {
            "const": "font"
        },
        "name": {
            "$ref": "utils/name.json"
        },
        "label": {
            "$ref": "utils/label.json"
        },
        "description": {
            "$ref": "utils/description.json"
        },
        "conditions": {
            "$ref": "utils/conditions.json"
        }
    },
    "required": ["type", "name", "label"]
}
